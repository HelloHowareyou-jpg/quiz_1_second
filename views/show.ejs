<%- include("./partials/header") %>

<div class="card" style="width: 18rem;">
  <img src="<%= cluck.img_url %>" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= cluck.username %></h5>
    <p class="card-text"><%= cluck.content %></p>
    <div class="d-flex">
      <a class="btn btn-warning mr-2" href="/clucks/<%= cluck.id %>/edit">Edit</a>
      <form action="/clucks/<%= cluck.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE" />
        <input type="submit" class="btn btn-danger" value="Delete" />
      </form>
    </div>
  </div>
</div>

<%- include("./partials/footer") %>
